{
  "name": "@anthropic/safesh",
  "version": "0.1.0",
  "exports": {
    ".": "./src/mod.ts",
    "./fs": "./src/stdlib/fs.ts",
    "./text": "./src/stdlib/text.ts",
    "./glob": "./src/stdlib/glob.ts",
    "./shell": "./src/stdlib/shell.ts",
    "./streams": "./src/streams/mod.ts"
  },
  "tasks": {
    "dev": "deno run --watch src/cli/main.ts",
    "test": "deno test --allow-read --allow-write --allow-run --allow-env",
    "check": "deno check src/**/*.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "serve": "deno run --allow-all src/mcp/server.ts"
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@^1",
    "@std/path": "jsr:@std/path@^1",
    "@std/streams": "jsr:@std/streams@^1",
    "@std/async": "jsr:@std/async@^1",
    "@std/cli": "jsr:@std/cli@^1",
    "@std/fmt": "jsr:@std/fmt@^1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225",
    "@std/tar": "jsr:@std/tar@^0.1",
    "@std/assert": "jsr:@std/assert@^1",
    "@std/testing": "jsr:@std/testing@^1",
    "@mcp/sdk": "npm:@modelcontextprotocol/sdk@^1",
    "zod": "npm:zod@^3",
    "@deno-library/compress": "jsr:@deno-library/compress@^0.5",
    "safesh:fs": "./src/stdlib/fs.ts",
    "safesh:text": "./src/stdlib/text.ts",
    "safesh:glob": "./src/stdlib/glob.ts",
    "safesh:shell": "./src/stdlib/shell.ts",
    "safesh:streams": "./src/streams/mod.ts",
    "safesh:stdlib": "./src/stdlib/mod.ts",
    "safesh:stream": "./src/stdlib/stream.ts",
    "safesh:transforms": "./src/stdlib/transforms.ts",
    "safesh:io": "./src/stdlib/io.ts",
    "safesh:fs-streams": "./src/stdlib/fs-streams.ts",
    "safesh:command": "./src/stdlib/command.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
